<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/bkDarkCream"
    android:paddingBottom="15dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_message"
            android:gravity="center_vertical"
            android:paddingLeft="24dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Item Details"
            android:textSize="20sp"
            android:fontFamily="sans-serif-condensed"
            android:background="@color/primaryColor"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center">

        <EditText
            android:layout_marginTop="25dp"
            android:layout_centerHorizontal="true"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:id="@+id/dialog_name"
            android:hint="Item Title"
            android:singleLine="true"
            android:fontFamily="sans-serif-condensed"/>

        <EditText
            android:layout_marginTop="75dp"
            android:layout_centerHorizontal="true"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:id="@+id/dialog_price"
            android:hint="Price"
            android:singleLine="true"
            android:fontFamily="sans-serif-condensed"/>

        <Button
            android:layout_marginTop="20dp"
            android:background="@android:color/transparent"
            android:layout_alignRight="@id/dialog_price"
            android:layout_alignEnd="@id/dialog_price"
            android:layout_below="@id/dialog_price"
            android:id="@+id/btn_set"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:text="Update"
            android:textSize="14sp"
            android:fontFamily="sans-serif-condensed"
            android:textAllCaps="true"
            android:textColor="@color/primaryColor"/>

    </RelativeLayout>


</RelativeLayout>