<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBG"
    android:clickable="true">

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Create New Event"
        android:textAllCaps="false"
        android:id="@+id/createButton"
        android:background="@drawable/button_main"
        android:textSize="20sp"
        android:textColor="@color/mainText"
        android:fontFamily="sans-serif"
        android:onClick="onClickCreateButton"
        android:layout_above="@+id/oldButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp" />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Edit Existing Event"
        android:textAllCaps="false"
        android:background="@drawable/button_main"
        android:textSize="20sp"
        android:textColor="@color/mainText"
        android:fontFamily="sans-serif"
        android:id="@+id/oldButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickOldButton"
        android:layout_marginBottom="10dp"/>

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Clear Existing Event"
        android:textAllCaps="false"
        android:background="@drawable/button_main"
        android:textSize="20sp"
        android:textColor="@color/mainText"
        android:fontFamily="sans-serif"
        android:id="@+id/clearButton"
        android:onClick="onClickClearButton"
        android:layout_below="@+id/oldButton"
        android:layout_alignStart="@+id/oldButton" />

</RelativeLayout>
