<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.asus1.menuList.CreateActivity">


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Next"
        android:textAllCaps="false"
        android:id="@+id/amountEnter"
        android:background="@drawable/button_main"
        android:textSize="20sp"
        android:textColor="@color/mainText"
        android:fontFamily="sans-serif-condensed"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Place"
        android:id="@+id/locMsg"
        android:layout_above="@+id/locVal"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="14dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/nameVal"
        android:layout_marginTop="17dp"
        android:layout_below="@+id/nameMsg"
        android:layout_alignStart="@+id/locVal"
        android:textAlignment="center" />

    <TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:textAppearance="?android:attr/textAppearanceLarge"
    android:text="Event"
    android:id="@+id/nameMsg"
        android:layout_marginTop="44dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Amount"
        android:id="@+id/amountMsg"
        android:layout_marginBottom="30dp"
        android:layout_above="@+id/amountVal"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/amountVal"
        android:layout_marginBottom="48dp"
        android:layout_above="@+id/amountEnter"
        android:layout_alignStart="@+id/amountEnter"
        android:textAlignment="center" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/locVal"
        android:layout_marginBottom="31dp"
        android:layout_above="@+id/amountMsg"
        android:layout_alignEnd="@+id/amountEnter"
        android:textAlignment="center" />

</RelativeLayout>
